@model TutorRegistrationModel
@{
    ViewData["Title"] = "TutorRegistration";
}

<div container style="height:805px">
    <h1>Tutor Service Registration</h1>
    <p> Please fill in the form below and click the summit botton when your done</p>
    <p> All field are required</p>

    <form asp-action="TutorRegistration" method="post" asp-antiforgery="true" role="form">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="FirstName" class="form-control" placeholder="Your first name.." />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="LastName" class="form-control" placeholder="Your last name.." />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Email" class="form-control" placeholder="Your email address.." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AvailableCourses" class="col-md-2">Availabe Courses</label>
            <div class="col-md-6">
                <select asp-for="AvailableCourses" class="form-control">
                    <option value="None" selected></option>
                    <option value="computerBasics">Computer Basics</option>
                    <option value="CPlusPlus">C++</option>
                    <option value="CSharp">C#</option>
                    <option value="InvestingCourse">Investing Course</option>
                </select>
                <span asp-validation-for="AvailableCourses" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Availability" class="col-md-2"></label>
            <div class="col-md-6">
                <select asp-for="Availability" class="form-control">
                    <option value="None" selected></option>
                    <option value="morning"> Morning Session: 9:30AM-11:30AM</option>
                    <option value="afternoon">Afternoon Session: 1:00PM-3:00PM</option>
                    <option value="evening">Evening Session: 4:00PM- 6:00PM</option>
                </select>
                <span asp-validation-for="Availability" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="col-md-2"></label>
            <div class="col-md-6">
                <input asp-for="Password" class="form-control" placeholder="Enter a unique password.." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-7">
                <button class="btn btn-primary"> Summit</button>
            </div>
        </div>

    </form>
    <form>
        <a asp-controller="Home" asp-action="StudentServices">Return to Previous page</a>
    </form>

    </div>
