@{
    ViewData["Title"] = "TutorRegistration";
}
<h1>Tutor Service Registration</h1>
<p> Please fill in the form below and click the summit botton when your done</p>
<p> All field are required</p>

<div class="container">
    <form action="/action_page.php" method="post">
        <label for="fname">First Name</label>
        <input type="text" id="fname" name="firstName" placeholder="Your name.." required>

        <label for="lname">Last Name</label>
        <input type="text" id="lname" name="lastName" placeholder="Your last name.." required>

        <label for="email">Email Address</label>
        <input type="text" placeholder="Enter Email" name="email" required>

        <label for="courses">Available Courses</label>
        <select id="courses" name="courses">
            <option value="computerBasics">Computer Basics</option>
            <option value="c++">C++</option>
            <option value="c#">C#</option>
            <option value="investingCourse">Investing Course</option>
        </select>

        <label for="sessions">Available sessions</label>
        <select id="sessions" name="sessions">
            <option value="morning"> Morning Session: 9:30AM-11:30AM</option>
            <option value="afternoon">Afternoon Session: 1:00PM-3:00PM</option>
            <option value="evening">Evening Session: 4:00PM- 6:00PM</option>
        </select>

        <input type="submit" value="Submit">
    </form>
</div>
